<resources>

    <style name="Theme.L.Statusbar.Tint.Workaround" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.L.Statusbar.Tint.Workaround.ActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.L.Statusbar.Tint.Workaround.Widget</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="Theme.L.Statusbar.Tint.Workaround.Widget" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColorHint">@color/l_statusbar_tint_workaround_widget_text_color</item>
        <item name="android:textColor">@color/l_statusbar_tint_workaround_widget_text_color</item>
        <item name="android:background">@color/l_statusbar_tint_workaround_widget_background_color</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Theme.L.Statusbar.Tint.Workaround.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/l_statusbar_tint_workaround_actionbar_color</item>
        <item name="android:titleTextStyle">@style/Theme.L.Statusbar.Tint.Workaround.ActionBar.TitleTextStyle</item>
        <item name="android:height">@dimen/l_statusbar_tint_workaround_actionbar_height</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="GoogleNavDrawer.MainSectionText" parent="android:TextAppearance.Medium">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">21sp</item>
        <item name="android:minHeight">@dimen/main_section_item_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="GoogleNavDrawer.SecondarySectionText" parent="GoogleNavDrawer.MainSectionText">
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">@dimen/secondary_section_item_height</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Theme.L.Statusbar.Tint.Workaround.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColorHint">@color/l_statusbar_tint_workaround_actionbar_titletextstyle_colorhint</item>
        <item name="android:textColor">@color/l_statusbar_tint_workaround_actionbar_titletextstyle_text_color</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

</resources>
